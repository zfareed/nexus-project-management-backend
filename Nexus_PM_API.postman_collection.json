            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "user_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "project_id",
            "value": "",
            "type": "string"
        },
        {
